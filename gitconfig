[alias]
  lo = log --oneline --decorate
  lg = log --oneline --decorate --graph --all
  gl = log -E -i --grep
  ds = diff --cached
  sf = diff-tree --no-commit-id --name-only -r
  mff = merge --ff-only
  mnff = merge --no-ff
  rhm = reset --hard origin/master
  rhs = reset --hard origin/staging
  unstage = reset
  uncommit = reset --soft HEAD^
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[fetch]
  prune = true
[rebase]
  autosquash = true
[init]
  templatedir = ~/.git_template
