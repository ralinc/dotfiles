[alias]
  sl = log --oneline --decorate
  sla = log --oneline --decorate --graph --all
  glog = log -E -i --grep
  slog = log -S
  flog = log --oneline --
  mff = merge --ff-only
  mnff = merge --no-ff
  rhm = reset --hard origin/master
  rhs = reset --hard origin/staging
  unstage = reset
  uncommit = reset --soft HEAD^
  sf = diff-tree --no-commit-id --name-only -r
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[fetch]
  prune = true
[rebase]
  autosquash = true
[init]
  templatedir = ~/.git_template
