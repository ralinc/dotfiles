[user]
  email = ralin.chimev@gmail.com
  name = Ralin Chimev
[github]
  user = ralinc
[color]
  ui = auto
[advice]
  skippedCherryPicks = false
[alias]
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ce = commit --allow-empty -m
  fix = commit --fixup
  file = diff-tree --no-commit-id --name-only -r
  my = log --oneline --author=\"Ralin Chimev\"
  mlog = log -E -i --grep
  clog = log -S
  plog = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  flog = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s' --
  sdiff = ls-tree -l HEAD --
  ff = merge --ff-only
  noff = merge --no-ff
  unstage = reset
  uncommit = reset --soft HEAD^
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  pager = delta
[fetch]
  prune = true
[push]
  default = current
[rebase]
  autosquash = true
[interactive]
  diffFilter = delta --color-only
[delta]
  dark = true
  line-numbers = true
  navigate = true
  side-by-side = true
[merge]
  conflictStyle = zdiff3
[init]
  defaultBranch = main
