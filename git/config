[user]
  email = ralin.chimev@gmail.com
  name = Ralin Chimev
[github]
  user = ralinc
[color]
  ui = auto
[alias]
  cm = !git fetch && git checkout master && git reset --hard origin/master && git checkout -
  cs = !git fetch && git checkout staging && git reset --hard origin/staging
  fix = commit --fixup
  file = diff-tree --no-commit-id --name-only -r
  flog = log --oneline --
  glog = log -E -i --grep
  slog = log -S
  mffo = merge --ff-only
  mnff = merge --no-ff
  ms = merge --squash
  sl = log --oneline --decorate
  sla = log --oneline --decorate --graph --all
  unstage = reset
  uncommit = reset --soft HEAD^
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[fetch]
  prune = true
[push]
  default = current
[rebase]
  autosquash = true
